<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/empty_events"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom"
            android:src="@drawable/pull_refresh"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="8pt"
            android:textStyle="bold"
            android:textColor="@color/orangelight"
            android:text="Pull to Refresh List\nor\nScan QR code\n Get Events !"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/nodata_scan_link"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:id="@+id/card_store"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="fitCenter"
                android:id="@+id/img_store_logo"
                android:src="@drawable/carpediem_logo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txt_store"
                android:textColor="@color/black"
                android:textSize="14pt"
                android:textStyle="bold"
                android:text="RESTAURANT"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh_main_layout">
        <!--<ListView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:visibility="gone"-->
            <!--android:id="@+id/lv_time_event"></ListView>-->
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_timevent" />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>