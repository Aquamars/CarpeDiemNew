<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FCAC0C</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/orangelight</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/orangelight</item>
        <!--Window color-->
        <!--<item name="android:windowBackground">@color/orangelight</item>-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppCustomToolbar" parent="AppTheme.NoActionBar">
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/orangelight</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/orangelight</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/orangelight</item>
    </style>
</resources>
